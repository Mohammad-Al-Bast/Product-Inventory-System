<!-- Sidebar Overlay (for mobile) -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

<!-- Sidebar Navigation -->
<aside class="sidebar" id="sidebar">
	<div class="sidebar-header">
		<div class="logo">
			<i class="fas fa-boxes"></i>
			<h2>Inventory</h2>
		</div>
		<button class="sidebar-close" id="sidebarClose" aria-label="Close menu">
			<i class="fas fa-times"></i>
		</button>
	</div>
	<nav class="nav-menu">
		<div class="nav-group">
			<a
				href="/"
				class="nav-item <%= active === 'dashboard' ? 'active' : '' %>"
			>
				<i class="fas fa-home"></i>
				<span>Dashboard</span>
			</a>
			<div class="sub-menu">
				<a href="/#transactions" class="nav-item sub-item">
					<i class="fas fa-exchange-alt"></i>
					<span>Transactions</span>
				</a>
				<a href="/#alerts" class="nav-item sub-item">
					<i class="fas fa-exclamation-triangle"></i>
					<span>Low Stock Alerts</span>
				</a>
			</div>
		</div>
		<a
			href="/products"
			class="nav-item <%= active === 'products' ? 'active' : '' %>"
		>
			<i class="fas fa-box"></i>
			<span>Products</span>
		</a>
		<a
			href="/categories"
			class="nav-item <%= active === 'categories' ? 'active' : '' %>"
		>
			<i class="fas fa-tags"></i>
			<span>Categories</span>
		</a>
		<a
			href="/suppliers"
			class="nav-item <%= active === 'suppliers' ? 'active' : '' %>"
		>
			<i class="fas fa-truck"></i>
			<span>Suppliers</span>
		</a>
	</nav>
</aside>
